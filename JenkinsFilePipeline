 pipeline{
    agent any

    environment {
      FIREBASE_DEPLOY_TOKEN = credentials('firebase-token')
    }

    stages{
        stage('Building'){
            steps{
             echo 'Building stage'
	     sh 'docker --version'
	   }
        } 

         stage('Testing'){
            steps{
              echo 'Testing stage'
              sh 'npm --version'
            }
        }

        stage('Staging'){
            steps{
             echo 'Stating stage'
             sh 'firebase --version'
            }
        }

        stage('Production'){
            steps{
             sh 'firebase deploy -P production-replica-914e0 --token "$FIREBASE_DEPLOY_TOKEN"'
            }
        }
    }
}
